<%= form_for([@post, @post.comments.build]) do |f| %>
	<% if @post.comments.build.errors.any?%>
		<div id = "errors">
			<h3> <%= pluralize(@post.comments.build.errors.count, "error")%> prevented this post from saving</h3>
			<ul>
			<% @post.comments.build.errors.full_messages.each do |msg|%><li><%= msg%></li>
			<%end%>
			</ul>
		</div>
	<%end%>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name%>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body%>
	</p>

	<p>
		<%= f.submit%>
	</p>

<%end%>
